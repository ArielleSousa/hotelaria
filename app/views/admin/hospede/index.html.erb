<% content_for :main do %>
  <div class="py-3 d-flex">
    <%= render "shared/button_create", locals: {nome: "Novo Hospede", url: new_admin_hospede_path} %>
    <div class="ms-3 ">
      <%= render "shared/button_export"%>
    </div>
  </div>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nome</th>
        <th scope="col">CPF</th>
        <th scope="col">Telefone</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
  <tbody>
    <% @hospede.each_with_index do |item, i| %>
      <tr>
        <th scope="row"><%= "#{i}" %></th>
        <td><%= item.nome%></td>
        <td><%= item.cpf%></td>
        <td><%= item.telefone%></td>
        <td><%= item.email%></td>
        <td>
          <button type="button"  class="btn btn-delete" data-url='<%=admin_hospede_path(item)%>' > 
            <i class="bi bi-trash"></i>
          </button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= paginate @hospede, window: 2 %>
</div>

<%= render "shared/modal_delete" %>

<% end %>
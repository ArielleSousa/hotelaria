<%= form_with model: quarto, url:url	 do |f|%>
    <div class="mb-3">
      <%= f.label :hotel, "Hotel", class:"form-label" %>
      <%= f.collection_select(:hotel_id, Hotel.all, :id, :nome, {}, {class:"form-select"}) %>
    </div>
    <div class="mb-3">
      <%= f.label :quarto_tipo, "Quarto tipo", class:"form-label" %>
      <%= f.collection_select(:quarto_tipo_id, QuartoTipo.all, :id, :nome, {}, {class:"form-select"})%>
    </div>
    <div class="mb-3">
      <%= f.label :numero, "Numero", class:"form-label" %>
      <%= f.number_field :numero, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :descricao, "Descrição", class:"form-label" %>
      <%= f.text_field :descricao, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :capacidade, "Capacidade", class:"form-label" %>
      <%= f.number_field :capacidade, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :preco, "Preço", class:"form-label" %>
      <%= f.number_field :preco, step: 0.5, class:"form-control" %>
    </div>
      <%= f.label "Reservado", class:"form-label" %>
      <%= f.check_box :reservado, class:"form-check" %>
    </div>
    <%= f.submit "Salvar", class:"btn btn-primary" %>
  <% end %>